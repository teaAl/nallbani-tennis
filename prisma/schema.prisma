generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Booking {
  id            Int           @id @default(autoincrement())
  bookingType   String
  recurring     Boolean
  startDate     DateTime
  endDate       DateTime
  name          String
  surname       String
  email         String        @unique
  phone         String
  needEquipment Boolean
  createdAt     DateTime      @default(now())
  status        String
  bookedHours   BookedHours[]
}

model BookedHours {
  id        Int      @id @default(autoincrement())
  booking   Booking  @relation(fields: [bookingId], references: [id])
  bookingId Int
  date      DateTime
  startHour Int
  endHour   Int
}
